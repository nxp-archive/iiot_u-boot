
if TARGET_LS1046ARDB

config SYS_BOARD
	default "ls1046ardb"

config SYS_VENDOR
	default "freescale"

config SYS_SOC
	default "fsl-layerscape"

config SYS_CONFIG_NAME
	default "ls1046ardb"

config USB_COREID_SET
	bool "Enable USB for baremetal"
	default n

config USB_USB0_COREID
	int "USB0 is assigned to core1"
	default "1"
	depends on USB_COREID_SET

config USB_USB1_COREID
	int "USB1 is assigned to core2"
	default "2"
	depends on USB_COREID_SET

config USB_USB2_COREID
	int "USB2 is assigned to core3"
	default "3"
	depends on USB_COREID_SET

config USB_CTL_NUM
	int "USB Controller numbers "
	default "3"
	depends on USB_COREID_SET

if FSL_LS_PPA
config SYS_LS_PPA_FW_ADDR
	hex "PPA Firmware Addr"
	default 0x40400000 if SYS_LS_PPA_FW_IN_XIP && QSPI_BOOT
	default 0x400000 if SYS_LS_PPA_FW_IN_MMC || SYS_LS_PPA_FW_IN_NAND

if CHAIN_OF_TRUST
config SYS_LS_PPA_ESBC_ADDR
	hex "PPA Firmware HDR Addr"
	default 0x40680000 if SYS_LS_PPA_FW_IN_XIP && QSPI_BOOT
	default 0x680000 if SYS_LS_PPA_FW_IN_MMC || SYS_LS_PPA_FW_IN_NAND
endif
endif

source "board/freescale/common/Kconfig"
endif
